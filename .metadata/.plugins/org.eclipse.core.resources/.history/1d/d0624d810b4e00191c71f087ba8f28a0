import java.util.ArrayList;
import java.util.Random;

public class InsertionSort {
/**
 * 实现插入排序
 * @param args
 */
	public static void main(String[] args) {
		System.out.println("hello");
		InsertionSort iSort = new InsertionSort(10, 100);
		iSort.sortIt();
	}
	
	ArrayList<Integer> list = null;
	/**
	 * 产生一个序列
	 * @param num	数据的个数
	 * @param mod	产生随机数的范围在1～mod之间
	 */
	public InsertionSort(int num, int mod) {
		list = new ArrayList<Integer>(num);
		Random random = new Random();
		System.out.println("排序之前的数组为：");
		System.out.println(list.size());	//此时list中的元素为0
		for (int i = 0; i < num; i++) {
			list.add(Math.abs(random.nextInt()) % mod + 1);	//自动装箱
			System.out.print("list[" + i + "]=" + list.get(i) + "\t");
		}
		System.out.println();
	}
	/**
	 * 对此类中的list进行排序
	 */
	public void sortIt() {
		if(list.size() == 0) {
			System.out.println("列表为空");
			return ;
		}
		int maxsize = 1;	//标记已经排序好的数据数
		Integer tempInt ;		//定义一个中间变量
		for (int i = 1; i < list.size(); i++) {
			tempInt = list.remove(i);
			if(tempInt.intValue() > list.get(maxsize-1).intValue()) {
				list.add(maxsize, tempInt);
				maxsize++;
			}else {
				/**
				 * 为从第一个数进行比较，如果遇到一个大于此数的A，就将此数插入到A的位置，原有元素自动后移
				 */
				for (int j = 0; j < maxsize; j++) {
					if(list.get(j).intValue() >= tempInt.intValue()) {
						list.add(j, tempInt); 	
						maxsize++;
						break;
					}
				}
			}
		}
		System.out.println("排序之后的数组为：");
		for (int i = 0; i < list.size(); i++) {
			System.out.print("list[" + i + "]=" + list.get(i) + "\t");
		}
		System.out.println();
	}
	

}
